<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tx_informacion_descarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/no_podr_s_volver_a_descargar_los_datos_si_vuelves_hacia_atras"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_volver_atras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombrePaciente" />

    <EditText
        android:id="@+id/nombrePaciente"
        android:layout_width="308dp"
        android:layout_height="77dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/nombre_del_paciente"
        android:inputType="textPersonName"
        android:textColor="@color/colorTextoBlanco"
        android:textColorHighlight="@color/colorTextoBlanco"
        android:textColorHint="@color/colorTextoBlanco"
        android:textColorLink="@color/colorTextoBlanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bt_descargar_excel"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginEnd="101dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_volver_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombrePaciente"
        app:srcCompat="@drawable/download_excel" />

    <ImageView
        android:id="@+id/bt_volver_atras"
        android:layout_width="105dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_descargar_excel"
        app:layout_constraintTop_toBottomOf="@+id/nombrePaciente"
        app:srcCompat="@drawable/abc_vector_test" />

</androidx.constraintlayout.widget.ConstraintLayout>